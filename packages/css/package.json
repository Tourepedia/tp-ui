{
  "name": "@tourepedia/css",
  "version": "0.19.0",
  "description": "Css for Tourepedia",
  "repository": "https://github.com/tourepedia/tp-ui",
  "author": "Sudhir <sudhir.mitharwal@tourepedia.com>",
  "license": "MIT",
  "main": "lib/theme.js",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build:css": "tailwind build src/index.css -o lib/styles.css",
    "build:theme": "../../node_modules/.bin/tsc lib/theme.ts --outDir lib --module commonjs  --declaration true --allowSyntheticDefaultImports true",
    "build": "npm run build:css && npm run build:theme",
    "build:watch": "chokidar \"./src/**/*.(ts|js|tsx|jsx|css)\" -c \"npm run build:css\""
  },
  "files": [
    "src",
    "lib"
  ],
  "devDependencies": {
    "tailwindcss": "^1.0.2"
  },
  "gitHead": "7915c06b02d5fe40f2fc99a2bce33ef7a5ccbf01"
}
