{
  "workspaces": [
    "packages/*"
  ],
  "name": "tourepedia-ui",
  "version": "0.1.0",
  "description": "Tourepedia UI Components",
  "main": "index.js",
  "repository": "https://github.com/tourepedia/tp-ui",
  "author": "Sudhir Mitharwal <sudhir.mitharwal@tourepedia.com>",
  "license": "MIT",
  "scripts": {
    "start": "start-storybook -p 9001 -c .storybook",
    "bootstrap": "lerna bootstrap --hoist",
    "build": "lerna run build --parallel",
    "test": "lerna run test --stream",
    "build:changed": "lerna run build --parallel --since origin/master",
    "release": "lerna run test --since origin/master && yarn build:changed && lerna publish"
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@storybook/addon-info": "^4.1.11",
    "@storybook/react": "^4.1.11",
    "@types/jest": "^23.3.13",
    "@types/react": "^16.7.22",
    "@types/react-dom": "^16.0.11",
    "@types/react-test-renderer": "^16.0.3",
    "awesome-typescript-loader": "^5.2.1",
    "babel-loader": "^8.0.5",
    "jest": "^24.0.0",
    "lerna": "^3.10.7",
    "prettier": "^1.16.3",
    "react": "^16.7.0",
    "react-docgen-typescript-webpack-plugin": "^1.1.0",
    "react-dom": "^16.7.0",
    "react-test-renderer": "^16.7.0",
    "ts-jest": "^23.10.5",
    "typescript": "^3.2.4"
  },
  "prettier": {
    "semi": false,
    "trailingComma": "es5"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(ts|js)x?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
